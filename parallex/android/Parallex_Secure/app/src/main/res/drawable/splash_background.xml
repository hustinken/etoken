<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:useLevel="false"
            android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1100%p"
                android:startColor="@color/pant_one_432c"
                android:endColor="#000000"
                />
        </shape>
    </item>
    <item android:left="10dp" android:right="10dp" android:top="100dp"
        android:bottom="100dp" android:gravity="center">
        <shape android:useLevel="false"
            android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="1500%p"
                android:startColor="@color/pant_one_432c"
                android:endColor="#000000"
                />
        </shape>
    </item>
</layer-list>