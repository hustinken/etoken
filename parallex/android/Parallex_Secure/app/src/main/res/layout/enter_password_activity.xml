<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context="com.parallex.softtoken.Authentication.EnterPasswordActivity">

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      android:background="@drawable/background_1"
      android:gravity="center_horizontal"
      android:layout_marginBottom="10dp">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/app_blue">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="@string/pin_required"
              android:paddingEnd="50dp"
              android:paddingStart="0dp"
              android:textSize="20sp"
              android:gravity="center"
              android:textColor="@color/white"/>
      </androidx.appcompat.widget.Toolbar>

      <TextView
          android:id="@+id/pinIntro"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="50dp"
          android:layout_marginStart="5dp"
          android:fontFamily="@font/archivo_black"
          android:textColor="@color/black"
          android:text="@string/please_enter_your_pin_to_access_the_application"
          android:textSize="19sp" />

      <EditText
          android:id="@+id/pin"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="40dp"
          android:layout_below="@+id/pinIntro"
          android:textSize="30sp"
          android:textStyle="bold"
          android:inputType="numberPassword"
          android:gravity="center"
          android:layout_centerHorizontal="true"
          android:cursorVisible="true"
          android:backgroundTint="@color/black"
          android:textColor="@color/app_blue"
          android:maxLength="4"/>

      <LinearLayout
          android:id="@+id/powered_by_label"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="10dp"
          android:gravity="right">

          <!--TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Powered By"
              android:textColor="@color/white"
              android:textSize="15sp" /-->

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:layout_marginRight="24dp"
              android:layout_marginTop="300dp"
              android:fontFamily="@font/archivo_black"
              android:text="@string/app_name"
              android:textColor="@color/black"
              android:textSize="20sp" />
      </LinearLayout>

  </LinearLayout>
</RelativeLayout>
